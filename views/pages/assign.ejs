<%- include('../partials/header'); %>
<%- include('../partials/navbar', { back: '/assignWorkWindow'}) %>
<div class="container">
	<div class = ".col-md-6.">
<form action="/assign?view=true" method="POST">
	<div class="mb-3 w-25">
		<label class="form-label">Manager: </label>
		<select id="manager_id" name="manager_id" class="form-control drop-down">
			<% for(const manager of managers) { %>
			<option value=<%= manager.ID_NO %>><%= manager.Mname %></option>
			<% } %>
		</select>
	</div>
	<div class="mb-3 w-25">
		<label class="form-label">Employee: </label>
		<select id="employee_id" name="employee_id" class="form-control drop-down">
			<% for(const employee of employees) { %>
			<option value=<%= employee.ID_NO %>><%= employee.Name %></option>
			<% } %>
		</select>
	</div>
	<div class="mb-3 w-25">
		<label class="form-label">Work Station: </label>
		<select id="station_id" name="station_id" class="form-control drop-down">
			<% for(const station of workStations) { %>
			<option value=<%= station.Station_ID %>><%= station.W_name %></option>
			<% } %>
		</select>
	</div>
	<div class="col-12">
    	<button type="submit" class="btn btn-primary">Assign</button>
  	</div>
</form>
		
</div>
</div>



<%- include('../partials/footer'); %>